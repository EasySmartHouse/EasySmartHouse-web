<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
   "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean name="signalingElement" class="by.ginger.smarthome.provider.device.alarm.PlainSignalingElement">
        <property name="enabled" value="true"/>
        <property name="id" value="1"/>
        <property name="title" value="Window sensor: 1"/>
        <property name="keyAddress" value="9800000020EC3105"/>
        <property name="labelAddress" value="FD00000AC4DFE701"/>
    </bean>
  
    <bean name="signalingModule" class="by.ginger.smarthome.modules.SignalingElementModule" singleton="true" init-method="initModule">
        <property name="scheduler" ref="scheduler"/>
        <property name="taskDelay">
            <bean class="java.lang.Long">
                <constructor-arg index="0" value="1000"/>
            </bean>
        </property>
        <property name="elements">
            <list>
                <ref bean="signalingElement"/>
            </list>
        </property>
    </bean>
</beans>